rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Media files - read-only for all users
    match /media/{artistName}/{allPaths=**} {
      // Allow all users to read
      allow read: if true;
      
      // Only authenticated users can write (for future admin panel)
      allow write: if request.auth != null;
    }
  }
}
